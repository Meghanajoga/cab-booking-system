{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "dotnet publish -c Release -o /tmp/publish",
    "startCommand": "dotnet /tmp/publish/CabBookingSystem.dll --urls \"http://0.0.0.0:$PORT\"",
    "nixpacksConfig": {
      "phases": {
        "setup": {
          "aptPkgs": ["dotnet-sdk-8.0"]
        }
      }
    }
  },
  "deploy": {
    "startCommand": "dotnet /tmp/publish/CabBookingSystem.dll --urls \"http://0.0.0.0:$PORT\"",
    "restartPolicyType": "ON_FAILURE",
    "sleep": {
      "enabled": true
    }
  }
}
