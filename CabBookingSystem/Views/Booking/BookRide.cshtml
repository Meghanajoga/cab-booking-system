@model CabBookingSystem.ViewModels.BookingViewModel
@{
    ViewData["Title"] = "Book a Ride - RideEase";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">🚗 Book Your Ride</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Create" asp-controller="Booking" method="post">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="PickupLocation" class="form-label fw-bold">Pickup Location</label>
                                    <input asp-for="PickupLocation" class="form-control" placeholder="Enter pickup address" />
                                    <span asp-validation-for="PickupLocation" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="DropoffLocation" class="form-label fw-bold">Dropoff Location</label>
                                    <input asp-for="DropoffLocation" class="form-control" placeholder="Enter destination" />
                                    <span asp-validation-for="DropoffLocation" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="CabType" class="form-label fw-bold">Choose Cab Type</label>
                            <select asp-for="CabType" class="form-control">
                                <option value="">Select Cab Type</option>
                                <option value="Mini">🚗 Mini (₹25 + ₹12/km)</option>
                                <option value="Sedan">🚙 Sedan (₹35 + ₹15/km)</option>
                                <option value="SUV">🚐 SUV (₹50 + ₹20/km)</option>
                                <option value="Luxury">🏎️ Luxury (₹80 + ₹30/km)</option>
                            </select>
                            <span asp-validation-for="CabType" class="text-danger"></span>
                        </div>

                        <input type="hidden" asp-for="PickupLatitude" id="pickupLat" />
                        <input type="hidden" asp-for="PickupLongitude" id="pickupLng" />
                        <input type="hidden" asp-for="DropoffLatitude" id="dropoffLat" />
                        <input type="hidden" asp-for="DropoffLongitude" id="dropoffLng" />

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">
                                🚗 Find Available Cabs
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('PickupLocation').addEventListener('blur', function() {
            document.getElementById('pickupLat').value = (Math.random() * 180 - 90).toFixed(6);
            document.getElementById('pickupLng').value = (Math.random() * 360 - 180).toFixed(6);
        });

        document.getElementById('DropoffLocation').addEventListener('blur', function() {
            document.getElementById('dropoffLat').value = (Math.random() * 180 - 90).toFixed(6);
            document.getElementById('dropoffLng').value = (Math.random() * 360 - 180).toFixed(6);
        });
    </script>
}