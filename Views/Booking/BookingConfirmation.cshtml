@model CabBookingSystem.Models.Booking
@{
    ViewData["Title"] = "Booking Confirmation";
    var cabType = ViewBag.CabType as string ?? "Unknown";
}
<style>
    /* ===== BOOKING CONFIRMATION STYLES ===== */
    .confirmation-container {
        min-height: 80vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem 0;
    }

    .confirmation-card {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(20px);
        border-radius: 20px;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
        border: 1px solid rgba(255, 255, 255, 0.4);
        overflow: hidden;
        transition: all 0.3s ease;
        width: 100%;
        max-width: 500px;
    }

        .confirmation-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 30px 60px rgba(0, 0, 0, 0.2);
        }

    .confirmation-header {
        background: linear-gradient(135deg, #10b981 0%, #059669 100%);
        color: white;
        padding: 2rem;
        text-align: center;
        position: relative;
        overflow: hidden;
    }

        .confirmation-header::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, rgba(255,255,255,0.1) 1px, transparent 1px);
            background-size: 50px 50px;
            animation: float 10s infinite linear;
        }

        .confirmation-header h3 {
            font-size: 2rem;
            font-weight: 700;
            margin: 0;
            position: relative;
            z-index: 1;
        }

    .confirmation-body {
        padding: 2rem;
        background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
    }

        .confirmation-body p {
            margin-bottom: 1rem;
            color: #475569;
            font-size: 1.1rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .confirmation-body strong {
            color: #1e293b;
            font-weight: 600;
            min-width: 120px;
        }

        .confirmation-body .badge {
            background: linear-gradient(135deg, #f59e0b, #d97706);
            color: white;
            padding: 0.5rem 1rem;
            border-radius: 8px;
            font-weight: 600;
            font-size: 0.9rem;
        }

    .payment-section {
        background: linear-gradient(135deg, rgba(245, 158, 11, 0.1), rgba(217, 119, 6, 0.05));
        border-radius: 12px;
        padding: 1.5rem;
        margin: 1.5rem 0;
        border: 1px solid rgba(245, 158, 11, 0.2);
    }

        .payment-section h5 {
            color: #b45309;
            font-weight: 700;
            margin-bottom: 0.5rem;
        }

        .payment-section p {
            color: #92400e;
            margin-bottom: 1rem;
        }

    .btn-payment {
        background: linear-gradient(135deg, #f59e0b, #d97706);
        border: none;
        color: white;
        padding: 1rem 2rem;
        font-size: 1.2rem;
        font-weight: 700;
        border-radius: 12px;
        transition: all 0.3s ease;
        width: 100%;
        box-shadow: 0 8px 20px rgba(245, 158, 11, 0.3);
    }

        .btn-payment:hover {
            background: linear-gradient(135deg, #d97706, #b45309);
            transform: translateY(-3px);
            box-shadow: 0 12px 30px rgba(245, 158, 11, 0.4);
        }

    .confirmation-footer {
        padding: 1.5rem 2rem;
        background: rgba(255, 255, 255, 0.8);
        border-top: 1px solid rgba(0, 0, 0, 0.1);
        display: flex;
        gap: 1rem;
        justify-content: center;
    }

    .btn-outline-primary {
        border: 2px solid #10b981;
        color: #10b981;
        font-weight: 600;
        border-radius: 8px;
        transition: all 0.3s ease;
        padding: 0.75rem 1.5rem;
    }

        .btn-outline-primary:hover {
            background: #10b981;
            border-color: #10b981;
            color: white;
            transform: translateY(-2px);
        }

    .btn-outline-secondary {
        border: 2px solid #6b7280;
        color: #6b7280;
        font-weight: 600;
        border-radius: 8px;
        transition: all 0.3s ease;
        padding: 0.75rem 1.5rem;
    }

        .btn-outline-secondary:hover {
            background: #6b7280;
            border-color: #6b7280;
            color: white;
            transform: translateY(-2px);
        }

    /* Animation */
    @@keyframes float {
        0% {
            transform: translate(0, 0) rotate(0deg);
        }

        100% {
            transform: translate(-50px, -50px) rotate(360deg);
        }
    }

    @@keyframes slideInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .confirmation-card {
        animation: slideInUp 0.6s ease-out;
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .confirmation-container {
            padding: 1rem;
        }

        .confirmation-header {
            padding: 1.5rem;
        }

            .confirmation-header h3 {
                font-size: 1.5rem;
            }

        .confirmation-body {
            padding: 1.5rem;
        }

            .confirmation-body p {
                font-size: 1rem;
                flex-direction: column;
                align-items: flex-start;
                gap: 0.25rem;
            }

        .confirmation-footer {
            flex-direction: column;
            padding: 1rem;
        }
    }
</style>

<div class="confirmation-container">
    <div class="confirmation-card">
        <div class="confirmation-header">
            <h3>Booking Created! ⏳</h3>
        </div>
        <div class="confirmation-body">
            <p><strong>Booking ID:</strong> <span>@Model.Id</span></p>
            <p><strong>📍 Pickup:</strong> <span>@Model.PickupLocation</span></p>
            <p><strong>🎯 Dropoff:</strong> <span>@Model.DropoffLocation</span></p>
            <p><strong>📏 Distance:</strong> <span>@Model.Distance.ToString("F2") km</span></p>
            <p><strong>💰 Fare:</strong> <span>₹@Model.Fare.ToString("F2")</span></p>
            <p><strong>🚗 Cab Type:</strong> <span>@cabType</span></p>
            <p><strong>📊 Status:</strong> <span class="badge">@Model.Status - Awaiting Payment</span></p>
            <p><strong>🕒 Booking Time:</strong> <span>@Model.BookingTime.ToString("f")</span></p>

            <div class="payment-section">
                <h5>Complete Your Booking</h5>
                <p>Complete payment to confirm your ride</p>
                <a asp-action="Payment" asp-controller="Payment" asp-route-bookingId="@Model.Id"
                   class="btn btn-payment">
                    💳 Complete Payment - ₹@Model.Fare.ToString("F2")
                </a>
            </div>
        </div>
        <div class="confirmation-footer">
            <a asp-action="MyBookings" class="btn btn-outline-primary">📋 View My Bookings</a>
            <a asp-action="BookRide" asp-controller="Home" class="btn btn-outline-secondary">🚗 Book Another Ride</a>
        </div>
    </div>
</div>