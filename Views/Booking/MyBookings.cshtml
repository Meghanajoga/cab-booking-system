@model IEnumerable<CabBookingSystem.Models.Booking>
@{
    ViewData["Title"] = "My Bookings";
}

<style>
    /* ===== MY BOOKINGS STYLES ===== */
    .bookings-container {
        min-height: 80vh;
        padding: 2rem 0;
    }

    .bookings-header {
        text-align: center;
        margin-bottom: 2rem;
    }

        .bookings-header h2 {
            font-size: 2.5rem;
            font-weight: 700;
            background: linear-gradient(135deg, #fbbf24 0%, #f59e0b 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin-bottom: 0.5rem;
        }

    .booking-card {
        background: rgba(255, 255, 255, 0.92);
        backdrop-filter: blur(15px);
        border-radius: 16px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
        border: 1px solid rgba(255, 255, 255, 0.4);
        transition: all 0.3s ease;
        height: 100%;
        overflow: hidden;
    }

        .booking-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.2);
        }

        .booking-card .card-header {
            background: linear-gradient(135deg, #10b981 0%, #059669 100%);
            color: white;
            border: none;
            padding: 1.25rem 1.5rem;
            font-weight: 700;
            font-size: 1.1rem;
        }

        .booking-card .card-body {
            padding: 1.5rem;
            background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
        }

        .booking-card p {
            margin-bottom: 0.75rem;
            color: #475569;
            font-size: 1rem;
        }

        .booking-card strong {
            color: #1e293b;
            font-weight: 600;
        }

    .badge {
        padding: 0.6rem 1rem;
        border-radius: 10px;
        font-weight: 700;
        font-size: 0.8rem;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
    }

    .bg-warning {
        background: linear-gradient(135deg, #f59e0b, #d97706) !important;
        color: white !important;
    }

    .bg-success {
        background: linear-gradient(135deg, #10b981, #059669) !important;
        color: white !important;
    }

    .bg-primary {
        background: linear-gradient(135deg, #3b82f6, #1d4ed8) !important;
        color: white !important;
    }

    .bg-secondary {
        background: linear-gradient(135deg, #6b7280, #4b5563) !important;
        color: white !important;
    }

    .bg-danger {
        background: linear-gradient(135deg, #ef4444, #dc2626) !important;
        color: white !important;
    }

    .bg-info {
        background: linear-gradient(135deg, #06b6d4, #0891b2) !important;
        color: white !important;
    }

    .alert {
        border-radius: 14px;
        border: none;
        backdrop-filter: blur(10px);
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
    }

    .alert-success {
        background: linear-gradient(135deg, rgba(16, 185, 129, 0.15), rgba(5, 150, 105, 0.1));
        color: #065f46;
        border: 1px solid rgba(16, 185, 129, 0.3);
    }

    .alert-info {
        background: linear-gradient(135deg, rgba(59, 130, 246, 0.15), rgba(37, 99, 235, 0.1));
        color: #1e40af;
        border: 1px solid rgba(59, 130, 246, 0.3);
    }

    .btn-outline-primary {
        border: 2px solid #10b981;
        color: #10b981;
        font-weight: 600;
        border-radius: 10px;
        transition: all 0.3s ease;
    }

        .btn-outline-primary:hover {
            background: #10b981;
            border-color: #10b981;
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(16, 185, 129, 0.3);
        }

    .btn-outline-secondary {
        border: 2px solid #6b7280;
        color: #6b7280;
        font-weight: 600;
        border-radius: 10px;
        transition: all 0.3s ease;
    }

        .btn-outline-secondary:hover {
            background: #6b7280;
            border-color: #6b7280;
            color: white;
            transform: translateY(-2px);
        }

    .btn-warning {
        background: linear-gradient(135deg, #f59e0b, #d97706);
        border: none;
        color: white;
        font-weight: 600;
        border-radius: 10px;
        padding: 0.75rem 1.5rem;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(245, 158, 11, 0.3);
    }

        .btn-warning:hover {
            background: linear-gradient(135deg, #d97706, #b45309);
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(245, 158, 11, 0.4);
        }

    .btn-primary {
        background: linear-gradient(135deg, #f59e0b, #d97706);
        border: none;
        color: white;
        font-weight: 600;
        border-radius: 10px;
        padding: 0.75rem 1.5rem;
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            background: linear-gradient(135deg, #d97706, #b45309);
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(245, 158, 11, 0.4);
        }

    /* Status indicator dots */
    .status-dot {
        display: inline-block;
        width: 8px;
        height: 8px;
        border-radius: 50%;
        margin-right: 8px;
    }

    .status-pending .status-dot {
        background: #f59e0b;
    }

    .status-confirmed .status-dot {
        background: #10b981;
    }

    .status-inprogress .status-dot {
        background: #3b82f6;
    }

    .status-completed .status-dot {
        background: #6b7280;
    }

    .status-cancelled .status-dot {
        background: #ef4444;
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .bookings-container {
            padding: 1rem 0;
        }

        .bookings-header h2 {
            font-size: 2rem;
        }

        .booking-card .card-body {
            padding: 1.25rem;
        }

        .booking-card p {
            font-size: 0.95rem;
        }
    }

    /* Animation for cards */
    @@keyframes slideInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .booking-card {
        animation: slideInUp 0.5s ease-out;
    }

        .booking-card:nth-child(1) {
            animation-delay: 0.1s;
        }

        .booking-card:nth-child(2) {
            animation-delay: 0.2s;
        }

        .booking-card:nth-child(3) {
            animation-delay: 0.3s;
        }

        .booking-card:nth-child(4) {
            animation-delay: 0.4s;
        }
</style>

<div class="bookings-container">
    <div class="container">
        <div class="bookings-header">
            <h2>My Bookings</h2>
            <p class="text-muted" style="color: #cbd5e1 !important;">Manage your ride bookings</p>
        </div>

        <!-- Cancellation Success Message -->
        @if (TempData["CancellationMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <h5>✅ Booking Cancelled Successfully!</h5>
                <p class="mb-1">@TempData["CancellationMessage"]</p>
                @if (TempData["CancellationDetails"] != null)
                {
                    <small class="text-muted">@TempData["CancellationDetails"]</small>
                }
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>

                <div class="mt-3">
                    <a asp-action="BookRide" asp-controller="Home" class="btn btn-outline-primary btn-sm me-2">
                        🚗 Book Another Ride
                    </a>
                    <a asp-action="Dashboard" asp-controller="Home" class="btn btn-outline-secondary btn-sm">
                        📊 Back to Home
                    </a>
                </div>
            </div>
        }

        @if (!Model.Any())
        {
            <div class="alert alert-info text-center">
                <h5>No Bookings Yet</h5>
                <p class="mb-3">You haven't made any bookings yet.</p>
                <a asp-action="BookRide" asp-controller="Home" class="btn btn-primary">
                    🚗 Book Your First Ride
                </a>
            </div>
        }
        else
        {
            <div class="row">
                @foreach (var booking in Model)
                {
                    <div class="col-lg-6 col-md-6 mb-4">
                        <div class="booking-card">
                            <div class="card-header">
                                <strong>Booking #@GetShortId(booking.Id)</strong>
                                <span class="badge @GetStatusBadgeClass(booking.Status) float-end">
                                    <span class="status-dot"></span>@booking.Status
                                </span>
                            </div>
                            <div class="card-body">
                                <p><strong>📍 From:</strong> @booking.PickupLocation</p>
                                <p><strong>🎯 To:</strong> @booking.DropoffLocation</p>
                                <p><strong>📏 Distance:</strong> @booking.Distance.ToString("F2") km</p>
                                <p><strong>💰 Fare:</strong> ₹@booking.Fare.ToString("F2")</p>
                                <p><strong>📅 Booked on:</strong> @booking.BookingTime.ToString("f")</p>
                                <p><strong>🚗 Cab Type:</strong> @booking.Cab?.Type</p>

                                @if (booking.Status == CabBookingSystem.Models.BookingStatus.Pending || booking.Status == CabBookingSystem.Models.BookingStatus.Confirmed)
                                {
                                    <form method="post" asp-controller="Booking" asp-action="CancelBooking" class="mt-3">
                                        <input type="hidden" name="id" value="@booking.Id" />
                                        <button type="submit" class="btn btn-warning">
                                            🚫 Cancel Booking
                                        </button>
                                    </form>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>

@functions {
    private string GetStatusBadgeClass(CabBookingSystem.Models.BookingStatus status)
    {
        return status switch
        {
            CabBookingSystem.Models.BookingStatus.Pending => "bg-warning",
            CabBookingSystem.Models.BookingStatus.Confirmed => "bg-success",
            CabBookingSystem.Models.BookingStatus.InProgress => "bg-primary",
            CabBookingSystem.Models.BookingStatus.Completed => "bg-secondary",
            CabBookingSystem.Models.BookingStatus.Cancelled => "bg-danger",
            _ => "bg-info"
        };
    }

    private string GetShortId(string id)
    {
        if (string.IsNullOrEmpty(id) || id.Length <= 8)
        {
            return id;
        }
        return id.Substring(0, 8);
    }
}